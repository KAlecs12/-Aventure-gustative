{# Template général de la page #}
{% extends 'base.html.twig' %}

{# Titre de la page #}
{% block title %}Mon titre{% endblock %}

{# Ici vous mettez vos codes HTML et balises Twig au besoin #}
{% block body %}
    <div class="allign-center pt-8">
        <img
                class="mx-auto w-48"
                src="{{ asset('imgs/logo.png')}}"
                alt="logo"
        />
        <h1 class="text-center text-xl font-light mt-3">AVENTURES GUSTATIVES</h1>
    </div>

    <hr class="my-10">

    <h1 class="text-center text-2xl font-light">Bienvenue sur Aventures Gustatives !</h1>

    <div class="max-w-4xl m-auto mt-4">
        <h1 class="text-base">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aliquam, assumenda commodi, deserunt dolorem doloremque magni maiores molestiae optio quaerat,
            quasi repudiandae voluptates! Fuga in incidunt repellendus. Accusamus amet aperiam ex explicabo, facilis fuga illo, magnam maxime minus obcaecati
            quae quas qui quidem quis quisquam ratione reiciendis totam voluptas voluptatum?</h1>
    </div>

    <div class="max-w-4xl m-auto mt-3 flex justify-between">
        <!-- Section social -->
        <div class="w-1/3">


        <section>
            <h3 class="italic">Bonjour</h3>
            <hr class="w-6 mt-2 my-3">
            <p class="">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Cumque dolor eaque explicabo fuga labore perspiciatis rerum sequi tempora voluptatem. Dolor.</p>
            <hr class="mt-2 my-3">

            <div class="flex justify-between text-2xl">
                <a href="https://www.instagram.com/" class="fa fa-instagram"></a>
                <a href="https://www.facebook.com/" class="fa fa-facebook"></a>
                <a href="https://www.pinterest.fr/" class="fa fa-pinterest"></a>
                <a href="https://www.youtube.com/" class="fa fa-youtube"></a>
            </div>

            <hr class="my-5">
            <h1 class="italic text-3xl text-center">Elu meilleur blog culunaire</h1>
            <hr class="my-5">
            <h2 class="italic text-xl">Ma dernière recette</h2>
            <hr class="w-6 mt-2 my-3">

            <div class=" rounded overflow-hidden border w-full bg-white mx-3 md:mx-0 lg:mx-0">
                <img class="w-full bg-cover" src="{{ asset('imgs/bruschetta.jpg')}}">
                <div class="px-3 pb-2">
                    <div class="pt-1">
                        <div class="mb-2 text-sm">
                            <h1 class="font-medium mr-2">Title</h1>

                            <a href="Redirect on Post">
                                <button class="w-full bg-button-green mt-2 py-2 text-white">Voir la recette</button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        </div>

        <!-- Section posts -->
        <div class="w-3/5">
        <section class="">
            <div class=" rounded overflow-hidden border w-full bg-white mx-3 md:mx-0 lg:mx-0">
                <img class="max-h-screen bg-cover" src="{{ asset('imgs/bruschetta.jpg')}}">
                <div class="px-3 pb-2">
                    <div class="pt-2">
                        <span class="text-sm text-gray-400 font-medium fa fa-user"> Author Name •</span>
                        <span class="text-sm text-gray-400 font-medium"> Date •</span>
                        <span class="text-sm text-gray-400 font-medium"> Category</span>
                    </div>
                    <div class="pt-1">
                        <div class="mb-2 text-sm">
                            <h1 class="font-medium mr-2">Title</h1>
                            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Fugit, reiciendis! [...]</p>

                            <a href="Redirect on Post">
                                <button class="w-full bg-button-green mt-2 py-2 text-white">Voir plus...</button>
                            </a>
                        </div>
                    </div>
                    <div class="text-xs mb-2 cursor-pointer font-medium fas fa-comment-alt fa fa-envelope"> 14 commentaires</div>
                </div>
            </div>
        </section>
        </div>
    </div>

    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
        <h2>Welcome {{ app.user.firstName }}</h2>
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="user-dropdown">
            <li>
                <a class="dropdown-item" href="{{ path('app_logout') }}">Log Out</a>
            </li>
        </ul>

    {% else %}
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="user-dropdown">
            <li>
                <h3><a href="{{ path('app_login') }}">Login</a></h3>
            </li>
            <li>
                <h3><a href="{{ path('app_register') }}">Register</a></h3>
            </li>
        </ul>
    {% endif %}

    {% if is_granted('ROLE_ADMIN') %}
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="user-dropdown">
            <li>
                <h3><a class="nav-link" href="{{ path('app_admin') }}">Admin</a></h3>
            </li>
        </ul>
    {% endif %}

{% endblock %}