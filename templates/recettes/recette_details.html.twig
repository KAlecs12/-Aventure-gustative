{# Template général de la page #}
{% extends 'base.html.twig' %}

{# Titre de la page #}
{% block title %}Recette | Titre{% endblock %}

{# Ici vous mettez vos codes HTML et balises Twig au besoin #}
{% block body %}

    <!-- Section posts -->
    <div class="w-1/3 m-auto">
        <div class="rounded border w-full bg-white mx-3 md:mx-0 lg:mx-0">
            <div class="pt-2">
                <span class="text-sm text-gray-400 font-medium fa fa-user"> {{ article.idUser.pseudo }} •</span>
                <span class="text-sm text-gray-400 font-medium"> {{ article.creationDate|date("m/d/Y") }}•</span>
                <span class="text-sm text-gray-400 font-medium">{{ article.categorie }}</span>
            </div>
            <div class="mb-2 text-sm">
                <h1 class="font-medium mr-2">{{ article.title }}</h1>
                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Fugit, reiciendis! [...]</p>

            </div>

            <img class="max-h-screen bg-cover" src="{{ asset('imgs/bruschetta.jpg')}}">
            <div class="px-3 pb-2">
                <div class="pt-1">
                    <div class="my-6 text-sm">
                        <p>{{ article.description}}</p>

                        <hr class="mt-2">

                    </div>
                </div>
                <div class="text-xs mb-2 cursor-pointer font-medium fas fa-comment-alt fa fa-envelope"> 14 commentaires</div>
                {% for commentaires in commentaire %}
                    <p class="text-gray-500">Rédigé par {{ commentaires.idUser.pseudo }}, le {{ commentaires.creationDate|date("m/d/Y H:i:s") }}</p>
                    <p class="text-sm mt-2">{{ commentaires.content }}</p>
                    <hr class="my-2">
                {% endfor %}
            </div>
        </div>

        {% if is_granted('ROLE_USER') %}
            <div id="comment">
                {{ form_start(form) }}
                {{ form_row(form.content, {'attr': {'placeholder': 'Entrer un commentaire'}}) }}
                <button type="submit">Envoyer</button>
                {{ form_end(form) }}
            </div>
        {% else %}
            <div>
                <a href="{{ path('app_login') }}"> Connectez-vous pour écrire un commentaire</a>
            </div>
        {% endif %}
        <h1>Recettes récentes</h1>
    </div>
    </div>

{% endblock %}