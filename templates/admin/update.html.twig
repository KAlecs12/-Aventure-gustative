{# Template général de la page #}
{% extends 'base.html.twig' %}

{# Titre de la page #}
{% block title %}Je suis Admin{% endblock %}

{# Ici vous mettez vos codes HTML et balises Twig au besoin #}
{% block body %}


    <div class="w-1/3 m-auto">
    <h1 class="text-button-green font-light text-3xl text-center mb-9 mr-8"> Modifier le plat !</h1>
    <div class="rounded border w-full bg-white mx-3 md:mx-0 lg:mx-0 mb-36">
            {{ form_start(form) }}
            {{ form_row(form.title) }}
        <br>
            {{ form_row(form.description) }}
        <br>
            {{ form_row(form.imageFile) }}
        <br>
            {{ form_row(form.categorie) }}
        <br>
            <button type="submit">Modifier</button>
            {{ form_end(form) }}
        </div>

    </div>
{% endblock %}